<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>onebusaway</artifactId>
    <groupId>org.onebusaway</groupId>
    <version>1.1.7</version>
  </parent>
  <artifactId>onebusaway-community-transit-gtfs</artifactId>
  <version>0.0.1-st-SNAPSHOT</version>

  <name>onebusaway-community-transit-gtfs</name>
  <description>Build a GTFS for Community Transit from raw schedule and GIS data</description>
  <url>https://github.com/bdferris/onebusaway-community-transit-gtfs/wiki/</url>

  <repositories>
    <repository>
      <id>releases-camsys-repo</id>
      <url>http://developer.onebusaway.org/archiva/repository/releases/</url> 
    </repository>
    <repository>
      <id>snapshots-camsys-repo</id>
      <url>http://developer.onebusaway.org/archiva/repository/snapshots/</url> 
    </repository>
    <repository>
      <id>public.onebusaway.org</id>
      <url>http://nexus.onebusaway.org/content/groups/public/</url>
    </repository>
  </repositories>

  <scm>
    <connection>scm:git:http://github.com/bdferris/onebusaway-community-transit-gtfs.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/bdferris/onebusaway-community-transit-gtfs.git</developerConnection>
    <url>http://github.com/bdferris/onebusaway-community-transit-gtfs</url>
  </scm>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/bdferris/onebusaway-community-transit-gtfs/issues</url>
  </issueManagement>

  <distributionManagement>
    <repository>
      <id>releases-camsys-repo</id>
      <name>OneBusAway Camsys Release Repo</name>
      <url>http://developer.onebusaway.org/archiva/repository/releases/</url> 
    </repository>
    <snapshotRepository>
      <id>snapshots-camsys-repo</id>
      <name>OneBusAway Camsys Snapshot Repo</name>
      <url>http://developer.onebusaway.org/archiva/repository/snapshots/</url> 
    </snapshotRepository>
    <!-- Even though we specify this in the parent pom, we need to specify it here to have full control over the url -->
    <site>
      <id>${site_id}</id>
      <url>${site_url}</url>
    </site>
  </distributionManagement>

  <properties>
    <geotools.version>2.6.4</geotools.version>
    <onebusaway.gtfs.version>1.2.0</onebusaway.gtfs.version>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>gt-shapefile</artifactId>
      <version>${geotools.version}</version>
    </dependency>
    <dependency>
      <groupId>org.geotools</groupId>
      <artifactId>gt-epsg-hsql</artifactId>
      <version>${geotools.version}</version>
    </dependency>
    <dependency>
      <groupId>org.onebusaway</groupId>
      <artifactId>onebusaway-gtfs</artifactId>
      <version>${onebusaway.gtfs.version}</version>
    </dependency>
    <dependency>
      <groupId>org.onebusaway</groupId>
      <artifactId>onebusaway-gtfs-transformer</artifactId>
      <version>${onebusaway.gtfs.version}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
      <version>1.5.6</version>
    </dependency>
    <dependency>
      <groupId>commons-digester</groupId>
      <artifactId>commons-digester</artifactId>
      <version>1.8.1</version>
    </dependency>
  </dependencies>


  <build>
    <plugins>
      <plugin>
        <groupId>com.mycila.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <configuration>
          <excludes combine.children="append">
            <!-- License Excludes -->
            <exclude>**/LICENSE.txt</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedClassifierName>withAllDependencies</shadedClassifierName>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>org.onebusaway.community_transit_gtfs.CommunityTransitGtfsMain</mainClass>
                </transformer>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ServicesResourceTransformer"/>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
